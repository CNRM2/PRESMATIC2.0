<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PRESMATIC2._0.Views.HomePage"
             Title="HomePage">
    <Grid>
        <VerticalStackLayout
            Spacing= "25"
            Padding="0"
            VerticalOptions="FillAndExpand"
            BackgroundColor="White">
            <Image Source="presmatic.png" HeightRequest="150" WidthRequest="150"/>
            <Label Text="Selecciona la opciÃ³n a ejecutar" HorizontalOptions="Center"/>
            <Button x:Name="btnpushpres" Clicked="btnpushpres_Clicked" BackgroundColor="Black" IsEnabled="True" Text="Crear nuevo Presupuesto" VerticalOptions="CenterAndExpand" HeightRequest="65"/>
            <VerticalStackLayout VerticalOptions="Center">
                <Label x:Name="txtNombreMaterial" Text="Nombre Material:" TextColor="Black"/>
                <Entry x:Name="NbMaterial" BackgroundColor="Gray" Placeholder=""/>
                <Label x:Name="txtPrecioMaterial" Text="Precio Material:"  TextColor="Black"/>
                <Entry x:Name="PrecioMat" BackgroundColor="Gray" Placeholder=""/>
                <Label x:Name="txtIdMaterial" Text="Id Material:"  TextColor="Black"/>
                <Entry x:Name="idMaterial" BackgroundColor="Gray" Placeholder=""/>
                <Button x:Name="NuevoMaterial" Clicked="NuevoMaterial_Clicked" BackgroundColor="Blue" Text="Agregar Nuevo Material" TextColor="Black"/>
            </VerticalStackLayout>


        </VerticalStackLayout>
    </Grid>

</ContentPage>