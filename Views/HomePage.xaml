<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PRESMATIC2._0.Views.HomePage"
             Title="HomePage"
             NavigationPage.IconColor="White">
    <Grid>
        <VerticalStackLayout
            Spacing= "25"
            Padding="0"
            VerticalOptions="FillAndExpand"
            BackgroundColor="White">
            <NavigationPage.TitleView>
                <StackLayout Orientation="Horizontal" VerticalOptions="Start" Spacing="8" BackgroundColor="Black">
                    <Label Text="Menú" FontSize="18"/>
                </StackLayout>
            </NavigationPage.TitleView>
            <Image Source="presmatic.png" HeightRequest="150" WidthRequest="150"/>
            <Label Text="Selecciona la opción a ejecutar" HorizontalOptions="Center"/>
            <Button x:Name="btnpushpres" Clicked="btnpushpres_Clicked" Margin="40,0,40,0" BackgroundColor="Black" 
                    IsEnabled="True" Text="Crear nuevo Presupuesto" VerticalOptions="CenterAndExpand" HeightRequest="65"/>
        </VerticalStackLayout>
    </Grid>

</ContentPage>